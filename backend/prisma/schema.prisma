datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma_client"
}

model Event {
  id       Int      @id @default(autoincrement())
  seriesId Int
  series   Series   @relation(fields: [seriesId], references: [id])
  value    Float
  date     DateTime @default(now())
  notes    String
}

model Series {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  events Event[]
}
